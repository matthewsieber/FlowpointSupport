@model FlowpointSupportVendor

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<a asp-controller="Vendors" asp-action="Index" asp-route-companyid="@Context.Request.Query["companyid"]">Back</a>
<hr />
<h4>@Html.DisplayFor(model => model.VVendorName) (ID: @Html.DisplayFor(model => model.IVendorId))</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IVendorId" />
            <div class="form-group">
                <label asp-for="VVendorName" class="control-label"></label>
                <input asp-for="VVendorName" class="form-control" />
                <span asp-validation-for="VVendorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VStreet1" class="control-label"></label>
                <input asp-for="VStreet1" class="form-control" />
                <span asp-validation-for="VStreet1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VStreet2" class="control-label"></label>
                <input asp-for="VStreet2" class="form-control" />
                <span asp-validation-for="VStreet2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VCity" class="control-label"></label>
                <input asp-for="VCity" class="form-control" />
                <span asp-validation-for="VCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VProvince" class="control-label"></label>
                <input asp-for="VProvince" class="form-control" />
                <span asp-validation-for="VProvince" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VPostalCode" class="control-label"></label>
                <input asp-for="VPostalCode" class="form-control" />
                <span asp-validation-for="VPostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VCountry" class="control-label"></label>
                <input asp-for="VCountry" class="form-control" />
                <span asp-validation-for="VCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VContact" class="control-label"></label>
                <input asp-for="VContact" class="form-control" />
                <span asp-validation-for="VContact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VPhone" class="control-label"></label>
                <input asp-for="VPhone" class="form-control" />
                <span asp-validation-for="VPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VFax" class="control-label"></label>
                <input asp-for="VFax" class="form-control" />
                <span asp-validation-for="VFax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VEmail" class="control-label"></label>
                <input asp-for="VEmail" class="form-control" />
                <span asp-validation-for="VEmail" class="text-danger"></span>
            </div>
            <div>
                <br/>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ICompanyId" />
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
