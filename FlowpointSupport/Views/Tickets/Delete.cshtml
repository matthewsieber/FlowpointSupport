@model FlowpointSupportTicket

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<a asp-controller="Tickets" asp-action="Index" asp-route-companyid="@ViewBag.CompanyId" asp-route-vendorid="@ViewBag.VendorId">Back</a>

<div>
    <h4>Ticket ID: @Html.DisplayFor(model => model.ITicketId)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VTicketMessage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VTicketMessage)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DtCreatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DtCreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DtModifiedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DtModifiedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ICreatedBy)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ICreatedBy)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IModifiedBy)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IModifiedBy)
        </dd>
    </dl>
    
    <h3>Are you sure?</h3>

    <form asp-action="Delete">
        <input type="hidden" name="companyId" value="@ViewBag.CompanyId" />
        <input type="hidden" asp-for="ITicketId" />
        <input type="hidden" asp-for="IVendorId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
